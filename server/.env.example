# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/news-filter

# JWT Configuration
JWT_SECRET=your_very_long_random_secret_key_minimum_64_characters_for_security
JWT_EXPIRE=7d

# API Keys
NEWSAPI_KEY=your_newsapi_key_from_newsapi.org
OPENAI_API_KEY=your_openai_api_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Redis (for caching)
REDIS_URL=redis://localhost:6379

# Optional: Elasticsearch (for advanced search)
ELASTICSEARCH_URL=http://localhost:9200

# Optional: X/Twitter API (for social media news)
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_SECRET=your_x_access_secret
